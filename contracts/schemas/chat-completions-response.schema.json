{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ChatCompletionsResponse",
  "type": "object",
  "required": ["id", "object", "created", "model", "choices", "usage"],
  "properties": {
    "id": { "type": "string" },
    "object": { "type": "string", "const": "chat.completion" },
    "created": { "type": "integer" },
    "model": { "type": "string" },
    "choices": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["index", "message", "finish_reason"],
        "properties": {
          "index": { "type": "integer" },
          "message": {
            "type": "object",
            "required": ["role", "content"],
            "properties": {
              "role": { "type": "string", "const": "assistant" },
              "content": {
                "type": "string",
                "description": "Assistant response text with runtime footer: [Kernel: Active | Verifier: Pass/Fail | Latency: {ms}]"
              }
            }
          },
          "finish_reason": { "type": "string", "const": "stop" }
        }
      }
    },
    "usage": {
      "type": "object",
      "required": ["prompt_tokens", "completion_tokens", "total_tokens"],
      "properties": {
        "prompt_tokens": { "type": "integer" },
        "completion_tokens": { "type": "integer" },
        "total_tokens": { "type": "integer" }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["session_id", "episode_id", "trust_score", "policy", "safety", "model_runtime"],
      "properties": {
        "session_id": { "type": "string" },
        "episode_id": { "type": "integer" },
        "trust_score": { "type": "number" },
        "policy": {
          "type": "object",
          "required": ["status", "version", "verifier_required", "verifier_pass"],
          "properties": {
            "status": { "type": "string", "const": "pass" },
            "version": { "type": "string" },
            "verifier_required": { "type": "boolean" },
            "verifier_pass": { "type": "boolean" }
          }
        },
        "safety": {
          "type": "object",
          "required": ["risk_score", "verifier_pass"],
          "properties": {
            "risk_score": { "type": "number" },
            "verifier_pass": { "type": "boolean" }
          }
        },
        "model_runtime": {
          "type": "object",
          "required": ["used", "model_id", "fallback_reason", "latency_ms"],
          "properties": {
            "used": { "type": "boolean" },
            "model_id": { "type": ["string", "null"] },
            "fallback_reason": { "type": ["string", "null"] },
            "latency_ms": { "type": "integer" }
          }
        }
      }
    }
  }
}
