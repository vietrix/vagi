{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ChatCompletionsPolicyError",
  "type": "object",
  "required": ["error"],
  "properties": {
    "error": {
      "type": "object",
      "required": ["code", "message", "details"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["code", "message", "stage", "severity"],
            "properties": {
              "code": { "type": "string" },
              "message": { "type": "string" },
              "stage": { "type": "string" },
              "severity": { "type": "string" }
            }
          }
        }
      }
    }
  }
}

